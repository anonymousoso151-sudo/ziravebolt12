{
  "name": "zirave-platform",
  "version": "1.0.0",
  "private": true,
  "description": "ZÄ°RAVE - Comprehensive Digital Agricultural Ecosystem",
  "keywords": [
    "agriculture",
    "farming",
    "marketplace",
    "ai",
    "mobile",
    "react-native"
  ],
  "scripts": {
    "install:all": "npm install && cd mobile && npm install && cd ../web-dashboard && npm install && cd ../backend && npm install",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:web": "cd web-dashboard && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build:all": "npm run build:backend && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web-dashboard && npm run build",
    "clean": "rm -rf node_modules mobile/node_modules web-dashboard/node_modules backend/node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
